# Cấu hình Bot Telegram
TELEGRAM_TOKEN=your_telegram_bot_token
ADMIN_IDS=123456789,987654321

# API Keys
LEGAL_API_KEY=your_legal_api_key
NEWS_API_KEY=your_news_api_key

# Cấu hình Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Cấu hình Web Server
WEB_HOST=0.0.0.0
WEB_PORT=8000
DEBUG_MODE=False

# Cấu hình Database (tùy chọn)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=legal_bot
DB_USER=postgres
DB_PASSWORD=your_db_password

# Cấu hình API
API_TIMEOUT=10
API_MAX_RETRIES=3

# Cấu hình Cache
CACHE_ENABLED=True
CACHE_TTL=3600

# Giới hạn Request
RATE_LIMIT=60
MAX_CONNECTIONS=100

# Cấu hình Tìm kiếm
SEARCH_RESULT_LIMIT=10
MIN_SEARCH_LENGTH=3

# Cấu hình Ngôn ngữ
DEFAULT_LANGUAGE=vi

# URLs API
LEGAL_API_URL=https://api.legal-service.com/v1
NEWS_API_URL=https://api.news-service.com/v1

# Nguồn tin tức được phép
ALLOWED_NEWS_SOURCES=source1,source2

# Cấu hình SSL (tùy chọn)
ENABLE_SSL=False
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
